{
    "entryFile": "src/server.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "src/**/*Controller.ts"
    ],
    "spec": {
        "outputDirectory": "dist",
        "specVersion": 3,
        "securityDefinitions": {
            "jwtAuth": {
                "type": "apiKey",
                "name": "Authorization",
                "in": "header"
            }
        }
    },
    "routes": {
        "routesDir": "dist",
        "authenticationModule": "./src/api/middlewares/authentication.ts"
    }
}